<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>TODO list</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='/assets/styles.css'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    

    
    <script src="assets/todo-list.js"></script>
</head>
    <body>
        <div class="container-fluid">

            <div >
                <form class="form-control">
                    <div >
                        <input type="text", name="item",class="form-control form-control-lg",placeholder="Add new TODO"/>
                        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                    </div>
                </form>
            </div>

                <ul id="todo-list">
                    <li>
                        <label> Items to finish </label>
                    </li>
                    <% for(var i =0;i<todos.length; i++){%>
                        <li id='item-<%= todos[i].id %>'>
                            <div >
                                <input class="form-check-input" type="checkbox" id="<%= todos[i].id %>" name="option1" value='<%= todos[i].item %>' unchecked>
                                <label class="form-check-label" ><%= todos[i].item %></label>
                            </div>
                        </li>
                    <% } %>
                </ul>  
            
            <ul id="todo-done">
                <li>
                    <label> Items Completed </label>
                </li>
                <% for(var i =0;i<completed.length; i++){%>
                    <li id='item-<%= completed[i].id %>'>
                        <div >
                            <input class="form-check-input" type="checkbox" id="<%= completed[i].id %>" name="option1" value='<%= completed[i].item %>' checked>
                            <label class="form-check-label" ><%= completed[i].item %></label>
                        </div>
                    </li>
                <% } %>
                       
            </ul>
    </div>
    </body>
</html>